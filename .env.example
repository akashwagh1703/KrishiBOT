# Environment Configuration Example
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:3001/api

# LLM Integration (Optional)
# Set to 'true' to enable LLM chat engine instead of mock
VITE_USE_LLM=false

# OpenAI Configuration (Optional)
# Required only if VITE_USE_LLM=true
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-3.5-turbo

# Other LLM Providers (Optional)
# VITE_ANTHROPIC_API_KEY=your_anthropic_key_here
# VITE_COHERE_API_KEY=your_cohere_key_here

# App Configuration
VITE_APP_NAME=KisanBot
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_NOTIFICATIONS=true

# Analytics (Optional)
# VITE_GA_TRACKING_ID=your_google_analytics_id
# VITE_MIXPANEL_TOKEN=your_mixpanel_token